<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acquaintedUserNick" android:text="name:" android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp" android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acquaintedUserFingerprint" android:text="key fingerprint:"
            android:layout_marginLeft="0dp"
            android:layout_alignBottom="@+id/acquaintedUserDel" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="del"
            android:id="@+id/acquaintedUserDel" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>